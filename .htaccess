RewriteEngine On
RewriteBase /

# Force HTTPS â€“ DigitalOcean compatible
RewriteCond %{HTTP:X-Forwarded-Proto} !https [NC]
RewriteRule ^ https://%{HTTP_HOST}%{REQUEST_URI} [L,R=301,NE]

# Your original rules
DirectoryIndex index.php
Options -Indexes

<FilesMatch "(?i)^\.env|config\.php|\.git|\.gitignore|\.htaccess$">
    Require all denied
</FilesMatch>

# Basic security headers (safe ones)
<IfModule mod_headers.c>
    Header always set X-Content-Type-Options "nosniff"
    Header always set X-Frame-Options "SAMEORIGIN"
    Header always set X-XSS-Protection "1; mode=block"
    Header always set Referrer-Policy "strict-origin-when-cross-origin"
</IfModule>

# Custom errors
ErrorDocument 404 /pages/error.php?code=404
ErrorDocument 403 /pages/error.php?code=403
ErrorDocument 500 /pages/error.php?code=500
